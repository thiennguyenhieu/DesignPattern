{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build selected main.cpp",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build.ps1",
                "-SourceFile",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}